{
  "name": "Tab Dance",
  "description": "Speed up browsing and reduce tabs, with a single keypress",
  "version": "0.0.1",
  "manifest_version": 3,
  "action": {
    "default_icon": {
      "16": "/images/icon@16.png",
      "32": "/images/icon@32.png",
      "48": "/images/icon@48.png",
      "128": "/images/icon@128.png"
    }
  },
  "icons": {
    "16": "/images/icon@16.png",
    "48": "/images/icon@48.png",
    "128": "/images/icon@128.png"
  },
  "background": {
    "service_worker": "extension-worker.js",
    "type": "module"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "commands": {
    "close-tab-backward": {
      "description": "Close current and highlight previous tab"
    },
    "close-other-tabs": {
      "description": "Close other tabs"
    },
    "highlight-previous": {
      "description": "Highlight previous tab"
    },
    "highlight-next": {
      "description": "Highlight next tab"
    }
  },
  "permissions": ["tabs", "commands"]
}
