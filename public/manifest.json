{
  "name": "Auto Tab Groups",
  "description": "Group tabs by host",
  "version": "0.0.1",
  "manifest_version": 3,
  "action": {
    "default_icon": {
      "16": "/images/icon@16.png",
      "32": "/images/icon@32.png",
      "48": "/images/icon@48.png",
      "128": "/images/icon@128.png"
    }
  },
  "icons": {
    "16": "/images/icon@16.png",
    "48": "/images/icon@48.png",
    "128": "/images/icon@128.png"
  },
  "background": {
    "service_worker": "extension-worker.js",
    "type": "module"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "commands": {
    "close-current-group": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "Command+Q"
      },
      "description": "Close current group"
    },
    "cycle-next-group": {
      "suggested_key": {
        "default": "Ctrl+Space",
        "mac": "Command+Space"
      },
      "description": "Cycle next group"
    },
    "tidy-up-tabs": {
      "suggested_key": {
        "default": "Ctrl+G",
        "mac": "Command+G"
      },
      "description": "Tidy up tabs"
    }
  },
  "permissions": ["tabs", "tabGroups", "commands"]
}
