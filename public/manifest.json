{
  "name": "Tab Dance",
  "description": "Speed up browsing and reduce tabs, with a single keypress",
  "version": "0.0.1",
  "manifest_version": 3,
  "action": {
    "default_icon": {
      "16": "/images/icon@16.png",
      "32": "/images/icon@32.png",
      "48": "/images/icon@48.png",
      "128": "/images/icon@128.png"
    }
  },
  "icons": {
    "16": "/images/icon@16.png",
    "48": "/images/icon@48.png",
    "128": "/images/icon@128.png"
  },
  "background": {
    "service_worker": "extension-worker.js",
    "type": "module"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "commands": {
    "toggle-extension": {
      "description": "Toggle extension"
    },
    "toggle-grouping": {
      "description": "Toggle grouping"
    },
    "close-item": {
      "description": "Close item"
    },
    "close-tab": {
      "description": "Close tab"
    },
    "close-others": {
      "description": "Close other items"
    },
    "previous-item": {
      "description": "Previous item"
    },
    "next-item": {
      "description": "Next item"
    },
    "print-debug-info": {
      "description": "Print debug info"
    }
  },
  "permissions": ["tabs", "tabGroups", "commands", "storage"]
}
