{
  "name": "Auto Tab Groups",
  "description": "Group tabs by host",
  "version": "0.0.1",
  "manifest_version": 3,
  "action": {
    "default_icon": {
      "16": "/images/icon@16.png",
      "32": "/images/icon@32.png",
      "48": "/images/icon@48.png",
      "128": "/images/icon@128.png"
    }
  },
  "icons": {
    "16": "/images/icon@16.png",
    "48": "/images/icon@48.png",
    "128": "/images/icon@128.png"
  },
  "background": {
    "service_worker": "extension-worker.js",
    "type": "module"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "commands": {
    "close-tabs-in-group": {
      "suggested_key": {
        "default": "Ctrl+Shift+W",
        "mac": "Command+Shift+W"
      },
      "description": "Close current group"
    },
    "highlight-next-group": {
      "suggested_key": {
        "default": "Ctrl+Down"
      },
      "description": "Highlight next group"
    },
    "highlight-previous-group": {
      "suggested_key": {
        "default": "Ctrl+Up"
      },
      "description": "Highlight previous group"
    }
  },
  "permissions": ["tabs", "tabGroups", "favicon", "commands"]
}
