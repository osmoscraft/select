{
  "name": "Select",
  "description": "Expand and shrink selection like VS Code",
  "version": "0.0.2",
  "manifest_version": 3,
  "action": {
    "default_icon": {
      "16": "/images/icon@16.png",
      "32": "/images/icon@32.png",
      "48": "/images/icon@48.png",
      "128": "/images/icon@128.png"
    }
  },
  "icons": {
    "16": "/images/icon@16.png",
    "48": "/images/icon@48.png",
    "128": "/images/icon@128.png"
  },
  "background": {
    "service_worker": "extension-worker.js",
    "type": "module"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "commands": {
    "expand-selection": {
      "description": "Expand selection",
      "suggested_key": {
        "default": "Alt+Shift+Right"
      }
    },
    "shrink-selection": {
      "description": "Shrink selection",
      "suggested_key": {
        "default": "Alt+Shift+Left"
      }
    },
    "scroll-to-selection-top": {
      "description": "Scroll to top of selection",
      "suggested_key": {
        "default": "Alt+Shift+Up"
      }
    },
    "scroll-to-selection-bottom": {
      "description": "Scroll to bottom of selection",
      "suggested_key": {
        "default": "Alt+Shift+Down"
      }
    },
    "delete-selected-elements": {
      "description": "Delete selected elements"
    }
  },
  "permissions": ["activeTab", "commands", "scripting"]
}
