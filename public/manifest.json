{
  "name": "Select",
  "description": "Semantic Selection",
  "version": "0.0.1",
  "manifest_version": 3,
  "action": {
    "default_icon": {
      "16": "/images/icon@16.png",
      "32": "/images/icon@32.png",
      "48": "/images/icon@48.png",
      "128": "/images/icon@128.png"
    }
  },
  "icons": {
    "16": "/images/icon@16.png",
    "48": "/images/icon@48.png",
    "128": "/images/icon@128.png"
  },
  "background": {
    "service_worker": "extension-worker.js",
    "type": "module"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "commands": {
    "shrink-selection": {
      "description": "Shrink selection",
      "suggested_key": {
        "default": "Alt+Shift+Left"
      }
    },
    "expand-selection": {
      "description": "Expand selection",
      "suggested_key": {
        "default": "Alt+Shift+Right"
      }
    },
    "shrink-selection-head": {
      "description": "Shrink selection head"
    },
    "expand-selection-head": {
      "description": "Expand selection head"
    },
    "shrink-selection-tail": {
      "description": "Shrink selection tail"
    },
    "expand-selection-tail": {
      "description": "Expand selection tail"
    },
    "undo-selection": {
      "description": "Undo selection"
    }
  },
  "permissions": ["activeTab", "commands", "scripting"]
}
